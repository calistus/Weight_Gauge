<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             android:orientation="vertical"
             android:background="#fff7faea">



        <TextView
                android:id="@+id/yourResultHead"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#fffa9f6e"
                android:text="Your Result"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:gravity="center"/>

        <TextView
                android:id="@+id/bmiresult"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000"
                android:textSize="16dp"/>


        <TextView
                android:id="@+id/advantageHead"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#ffabfa9c"
                android:text="Advantages"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:gravity="center"/>
    <TextView
        android:id="@+id/advantageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="#000"
        android:textSize="15dp"/>


        <TextView
                android:id="@+id/disadvantageHead"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#fffa0e69"
                android:layout_gravity="center"
                android:text="Disadvantages"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="15sp"
                android:textColor="@android:color/white"
                android:gravity="center"/>

        <TextView
                android:id="@+id/disadvantageTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#000"
                android:textSize="15dp"/>
        <Button
                android:id="@+id/tellButton"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:padding="4dp"
                android:text="Advice me"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:layout_marginBottom="5dp"
                android:paddingBottom="10dp"
                android:background="@drawable/custom_selector_button"
                android:gravity="center"/>
</LinearLayout>
